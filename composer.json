{
    "name": "juliangut/easy-coding-standard-config",
    "description": "easy-coding-standard configuration",
    "homepage": "https://github.com/juliangut/easy-coding-standard-config",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Julián Gutiérrez",
            "email": "juliangut@gmail.com",
            "homepage": "http://juliangut.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/juliangut/easy-coding-standard-config",
        "issues": "https://github.com/juliangut/easy-coding-standard-config/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^8.2",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.1",
        "juliangut/php-codesniffer-custom-sniffs": "^1.2",
        "juliangut/php-cs-fixer-custom-fixers": "^1.1.1",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.35",
        "lcobucci/clock": "^3.0",
        "nikic/php-parser": "^4.19|^5.3",
        "pedrotroller/php-cs-custom-fixer": "^2.34",
        "slevomat/coding-standard": "^8.22",
        "symplify/coding-standard": "^12.4",
        "symplify/easy-coding-standard": "^12.6"
    },
    "require-dev": {
        "juliangut/phpstan-config": "^1.2",
        "overtrue/phplint": "^9.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.15",
        "povils/phpmnd": "^3.5",
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Jgut\\ECS\\Config\\": "src/"
        }
    },
    "autoload-dev": {
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true,
            "ocramius/package-versions": true
        }
    }
}
