{
    "name": "juliangut/easy-coding-standard-config",
    "description": "easy-coding-standard configuration",
    "homepage": "https://github.com/juliangut/easy-coding-standard-config",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Julián Gutiérrez",
            "email": "juliangut@gmail.com",
            "homepage": "http://juliangut.com",
            "role": "Developer"
        }
    ],
    "support": {
        "source": "https://github.com/juliangut/easy-coding-standard-config",
        "issues": "https://github.com/juliangut/easy-coding-standard-config/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.4|^8.0",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.7",
        "nikic/php-parser": "^4.7",
        "pedrotroller/php-cs-custom-fixer": "^2.25",
        "slevomat/coding-standard": "^8.2",
        "symplify/coding-standard": "^9.3.26",
        "symplify/easy-coding-standard": "^11.1.8"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "~0.7",
        "grifart/phpstan-oneline": "~0.4",
        "infection/infection": "~0.24",
        "overtrue/phplint": "^3.0|^4.0",
        "phpcompatibility/php-compatibility": "^9.3",
        "phpmd/phpmd": "^2.10",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.7",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/phpunit": "^9.5",
        "povils/phpmnd": "^2.5",
        "roave/security-advisories": "dev-master",
        "sebastian/phpcpd": "^6.0",
        "thecodingmachine/phpstan-strict-rules": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Jgut\\ECS\\Fixer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Jgut\\ECS\\Fixer\\Tests\\": "tests/"
        },
        "files": [
            "bootstrap.php"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "infection/extension-installer": true,
            "ocramius/package-versions": true
        }
    }
}
